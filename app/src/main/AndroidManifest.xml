<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a.quarter">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".application.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name="com.a.quarter.view.activity.MainActivity" android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.PersonalActivity"/>
        <activity android:name=".view.activity.LoginActivity"/>
        <activity android:name=".view.activity.LoginNativeActivity" android:windowSoftInputMode="adjustUnspecified|stateHidden"/>
        <activity android:name=".view.activity.RegistActivity" android:windowSoftInputMode="adjustUnspecified|stateHidden"/>


    </application>

</manifest>