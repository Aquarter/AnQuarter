<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@mipmap/bar_login"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/activity_login_back"
        android:layout_width="wrap_content"
        android:src="@mipmap/ic_action_back"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="80dp"
        android:src="@mipmap/raw_1500977101"
        android:layout_height="80sp" />

    <TextView
        android:id="@+id/activity_login_else_login"
        android:text="其他登陆方式"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/activity_login_qq"
        android:text="QQ登陆"
        android:background="@drawable/button_shape"
        android:layout_width="200dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_login_else_login"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/activity_login_wechat"
        android:text="微信登陆"
        android:layout_margin="5dp"
        android:background="@drawable/button_shape"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_login_qq"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>