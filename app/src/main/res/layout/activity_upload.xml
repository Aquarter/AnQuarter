<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@color/blue">
        <TextView
            android:id="@+id/upload_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="创作"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bar_upload">

        <ImageView
            android:id="@+id/upload_video"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/btn_upload_video"
            android:background="@drawable/upload_btn_shap"
            android:padding="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/upload_joke"
            android:layout_marginTop="36dp" />

        <ImageView
            android:id="@+id/upload_joke"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/btn_upload_joke"
            android:background="@drawable/upload_btn_shap"
            android:layout_centerInParent="true"
            android:padding="20dp"
            />
    </RelativeLayout>
</LinearLayout>